{
	"info": {
		"_postman_id": "petmate-doctor-apis",
		"name": "PetMate Doctor APIs",
		"description": "Collection for testing PetMate backend doctor management APIs",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Doctor Signup",
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "formdata",
					"formdata": [
						{
							"key": "name",
							"value": "Dr. John Doe",
							"type": "text"
						},
						{
							"key": "email",
							"value": "john.doe@vetclinic.com",
							"type": "text"
						},
						{
							"key": "password",
							"value": "securepassword",
							"type": "text"
						},
						{
							"key": "confirmPassword",
							"value": "securepassword",
							"type": "text"
						},
						{
							"key": "contactNumber",
							"value": "+1234567890",
							"type": "text"
						},
						{
							"key": "address",
							"value": "123 Vet Street, City, State",
							"type": "text"
						},
						{
							"key": "licensePdf",
							"type": "file",
							"src": []
						}
					]
				},
				"url": {
					"raw": "{{baseUrl}}/api/doctors/signup",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"doctors",
						"signup"
					]
				},
				"description": "Register a new doctor with PDF license upload"
			},
			"response": []
		},
		{
			"name": "Doctor Login",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"email\": \"john.doe@vetclinic.com\",\n  \"password\": \" \"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/api/doctors/login",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"doctors",
						"login"
					]
				},
				"description": "Login for existing doctors"
			},
			"response": []
		},
		{
			"name": "Get Doctor Profile",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{doctorToken}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/doctors/profile/{{doctorId}}",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"doctors",
						"profile",
						"{{doctorId}}"
					]
				},
				"description": "Get doctor profile by ID"
			},
			"response": []
		},
		{
			"name": "Get Pending Doctors (Admin)",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{adminToken}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/admin/doctors/pending",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"admin",
						"doctors",
						"pending"
					]
				},
				"description": "Get list of doctors pending verification (Admin only)"
			},
			"response": []
		},
		{
			"name": "Verify Doctor (Admin)",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{adminToken}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/admin/doctors/{{doctorId}}/verify",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"admin",
						"doctors",
						"{{doctorId}}",
						"verify"
					]
				},
				"description": "Verify a doctor account (Admin only)"
			},
			"response": []
		},
		{
			"name": "Reject Doctor (Admin)",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{adminToken}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/admin/doctors/{{doctorId}}/reject?reason=Invalid license",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"admin",
						"doctors",
						"{{doctorId}}",
						"reject"
					],
					"query": [
						{
							"key": "reason",
							"value": "Invalid license"
						}
					]
				},
				"description": "Reject a doctor application (Admin only)"
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8080",
			"type": "string"
		},
		{
			"key": "doctorToken",
			"value": "your_doctor_jwt_token_here",
			"type": "string"
		},
		{
			"key": "adminToken",
			"value": "your_admin_jwt_token_here",
			"type": "string"
		},
		{
			"key": "doctorId",
			"value": "doctor_object_id_here",
			"type": "string"
		}
	]
}
